<!DOCTYPE html>
<html>

<head>
	<meta charset="utf-8">
	<title>Registración</title>
	<% include partials/head %>
</head>

<body class="signup">
	<div id="particles-js"></div>
	<div class="background_div"></div>

	<section>
		<div class="login_content z-depth-1">
			<div class="row center-align">
				<div class="col s12 m12 l12">
					<img id="logo_login" src="../img/icon/icon_app/edit.svg" alt="user">
				</div>
			</div>
			<div class="row">
				<% if (message.length > 0) { %>
					<div class="alert alert-danger">
						<%= message %>
					</div>
					<% } %>
						<div class="row">
							<form class="col s12" method="post" action="/signup">
								<div class="row">
									<div class="row">
										<div class="input-field col s4 m4 l4">
											<input id="nombre" type="text" class="validate tooltipped" name="nombre" required data-position="top" data-delay="50" data-tooltip="Por favor, introducir tu nombre completo">
											<label for="nombre">Nombre</label>
										</div>
										<div class="input-field col s4 m4 l4">
											<input id="usuario" type="text" class="validate tooltipped" name="usuario" required data-position="top" data-delay="50" data-tooltip="Por favor, introducir un nombre de usuario">
											<label for="usuario">Usuario</label>
										</div>
										<div class="input-field col s4 m4 l4 fileSingIn">
											<div class="file-field input-field">
											<div class="btn">
												<span>File</span>
												<input name="imagen" type="file" class="tooltipped" data-position="top" data-delay="50" data-tooltip="Por favor, introducir tu imagen de perfil">
													</div>
													<div class="file-path-wrapper">
												<input class="file-path validate" type="text">
											</div>
										</div>
										</div>
									</div>
									<div class="row">
										<div class="input-field col s6 m6 l6">
											<input id="email" type="email" class="validate" name="email" required>
											<label for="email">Email</label>
										</div>
										<div class="input-field col s6 m6 l6">
										<input id="password" type="password" class="validate" name="password" required>
										<label for="password">Contraseña</label>
									</div>
									</div>
									<div class="input-field col s4 m4 l4">
										<input id="pais" type="text" class="validate tooltipped" name="pais" required data-position="top" data-delay="50" data-tooltip="Por favor, introducir el país en donde vive">
										<label for="pais">País</label>
									</div>
									<div class="input-field col s4 m4 l4">
										<input id="ciudad" type="text" class="validate tooltipped" name="ciudad" required data-position="top" data-delay="50" data-tooltip="Por favor, introducir el nombre de la ciudad en donde vive">
										<label for="ciudad">Ciudad</label>
									</div>
									<div class="input-field col s4 m4 l4">
										<input id="residencia" type="text" class="validate tooltipped" name="residencia" required data-position="top" data-delay="50" data-tooltip="Por favor, introducir dónde se encuentra viviendo en estos momentos">
										<label for="residencia">Residencia</label>
									</div>
								</div>
								</div>
								<div class="row">
									<div class="col s12 m12 l12">
										<button class="waves-effect waves-light btn btn_send" type="submit" name="action">Enviar
										</button>
									</div>
								</div>
							</form>
						</div>
    	        	<div class="row center-align registrate">
						<p class="comenzar">¿Ya tienes una cuenta?</p>
						<p class="comenzar">ve a: <a href="/login" class="comenzar_hover">Comenzar</a></p>
					</div>
			</div>
		</div>
		<% include partials/scripts %>
</body>

</html>

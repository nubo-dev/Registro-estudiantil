<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Registro de Estudiantes</title>
    <% include partials/head %>
</head>

<body class="login">
    <div id="particles-js"></div>
    <div class="background_div"></div>

    <section>
        <div class="login_content z-depth-1">
            <div class="row center-align">
                <div class="col s12 m12 l12">
                    <img id="logo_login" src="../img/icon/icon_app/user.svg" alt="user">
                </div>
            </div>
            <div class="row">
                <% if (message.length > 0) { %>
                    <div class="alert alert-danger">
                        <%= message %>
                    </div>
                    <% } %>
                        <form action="/login" method="post" class="col s12 m12 l12">
                            <div class="row">
                                <div class="input-field col s10 push-s1">
                                    <i class="material-icons prefix">
                                        <img src="../img/icon/icon_app/mail_form.svg" alt="user-in">
                                    </i>
                                    <input id="icon_prefix" type="email" class="validate" name="email" required>
                                    <label for="email">Email</label>
                                </div>

                                <div class="input-field col s10 push-s1">
                                    <i class="material-icons prefix">
                                        <img src="../img/icon/icon_app/eye-off.svg" alt="unlock">
                                    </i>
                                    <input id="password" type="password" class="validate" name="password" required>
                                    <label for="password">Contraseña</label>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col s6 m6 l6 push-s1 push-m1 push-l1 registrate">
                                    <a class="modal-trigger" href="/signup">¡Registrate!</a>
                                </div>
                                <div class="col s6 m6 l6 right-align pull-s1 pull-m1 pull-l1">
                                    <button class="btn waves-effect btn_submit" type="submit" name="action">Comenzar
                                        <i class="material-icons right">
                                            <img id="arrow" src="../img/icon/icon_app/log-in.svg" alt="arrow">
                                        </i>
                                    </button>
                                </div>
                            </div>
                        </form>
            </div>
        </div>
        <% include partials/scripts %>
</body>
</html>
